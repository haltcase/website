---
import Button from "@/components/Button.astro";
import Content from "@/components/Content.astro";
import Main from "@/components/Main.astro";
import { socialLinks } from "@/data/socialLinks";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
	<Main>
		<Content headingText="contact">
			<ul class="flex flex-row flex-wrap justify-center">
				{
					Object.entries(socialLinks).map(([title, link]) => (
						<li class="group flex w-full flex-col items-center p-8 sm:max-w-1/3">
							<Icon
								class="mb-2 transition-transform ease-in-out group-has-hover:scale-115 group-has-hover:rotate-20"
								name={link.icon}
								size="36"
							/>

							<span class="text-sm lowercase">{link.callout}</span>

							<Button
								as="a"
								class="font-medium"
								href={link.href}
								target="_blank"
								rel="noreferrer"
								data-umami-event={`contact-${title.toLowerCase()}`}
							>
								{"display" in link ? (link.display ?? title) : title}
							</Button>
						</li>
					))
				}
			</ul>
		</Content>
	</Main>
</Layout>
