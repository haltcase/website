{
	"name": "@haltcase/website",
	"version": "2.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "pnpm lint && astro build",
		"build:check": "astro check && svelte-check",
		"dev": "astro dev",
		"eslint:check": "eslint .",
		"format": "eslint --fix . && prettier --write .",
		"postinstall": "astro sync",
		"lint": "pnpm eslint:check && pnpm prettier:check && pnpm typescript:check && pnpm build:check",
		"prepare": "husky",
		"prettier:check": "prettier --list-different . --ignore-path .gitignore --ignore-path .prettierignore.build",
		"start": "node ./dist/server/entry.mjs",
		"typescript:check": "tsc --noEmit"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/svelte": "^7.0.8",
		"@astrojs/vercel": "^8.1.3",
		"@fontsource-variable/overpass": "^5.1.1",
		"@fontsource-variable/playfair-display": "^5.1.0",
		"@iconify-json/simple-icons": "^1.2.16",
		"@iconify-json/tabler": "^1.2.13",
		"astro": "^5.5.5",
		"astro-icon": "^1.1.4",
		"astro-themes": "^0.2.5",
		"astro-typesafe-routes": "^4.2.2",
		"sharp": "^0.33.5",
		"svelte": "^5.15.0",
		"tailwind-merge": "^3.0.2",
		"wretch": "^2.11.0"
	},
	"devDependencies": {
		"@haltcase/style": "^7.2.2",
		"@tailwindcss/vite": "^4.0.17",
		"eslint": "9.23.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte-check": "^4.1.5",
		"tailwindcss": "^4.0.17",
		"typescript": "^5.8.2"
	},
	"packageManager": "pnpm@10.6.2",
	"engines": {
		"node": "22"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"esbuild",
			"sharp"
		]
	}
}
