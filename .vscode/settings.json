{
	"files.associations": {
		"*.css": "tailwindcss"
	},

	"workbench.editor.customLabels.patterns": {
		"**/index.{astro,html,js,jsx,ts,tsx,md,mdx}": "${dirname}/${filename}"
	},

	"typescript.tsdk": "./node_modules/typescript/lib",

	"tailwindCSS.classAttributes": [
		"class",
		"className",
		"classNames",
		"class:list",
		"classes",
		"ngClass",
		".*Styles*",
		".*ClassName",
		"clsx\\(([^)]*)\\)",
		"cx\\(([^)]*)\\)",
		"(?:'|\"|`)([^']*)(?:'|\"|`)"
	]
}
